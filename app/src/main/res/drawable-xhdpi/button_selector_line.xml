<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape  >
            <solid android:color="@color/atom_text_color"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="@color/atom_text_color"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_focused="false" >
        <shape>
            <solid android:color="@color/white_transluent"/>
            <corners
                android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" >
            </stroke>
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape>
            <solid android:color="@color/white_transluent"/>
            <corners
                android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" >
            </stroke>
        </shape>
    </item>

</selector>